---
services:
  freshrss:
    image: ghcr.io/linuxserver/freshrss:1.19.2@sha256:1e0dc74cc89db3abf7ae4c891809996a53b46beb7e4025fcc2438f3a262703a3
    container_name: rss
    environment:
      - PUID={{ ansible_user_uid }}
      - PGID={{ ansible_user_gid }}
      - TZ=Europe/Paris
    volumes:
      - ./config:/config
    ports:
      - {{ rss_local_port }}:80
    # https://github.com/docker/for-linux/issues/264#issuecomment-772844305
    extra_hosts:
      - 'host.docker.internal:host-gateway'
    restart: 'on-failure'

  rss_db:
    image: lscr.io/linuxserver/mariadb
    container_name: rss_db
    environment:
      - PUID={{ ansible_user_uid }}
      - PGID={{ ansible_user_gid }}
      - TZ=Europe/Paris
      - MYSQL_ROOT_PASSWORD={{ rss_db_password }}
      - MYSQL_DATABASE=rss
      - MYSQL_USER=rss
      - MYSQL_PASSWORD={{ rss_db_password }}
    volumes:
      - ./db_data:/config
    restart: unless-stopped
