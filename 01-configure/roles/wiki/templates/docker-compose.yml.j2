---
services:
  bookstack:
    image: lscr.io/linuxserver/bookstack:24.05.4@sha256:aee741f9dea201ff619cf2f1560bafa66f4d5ca3c5c39421b4ffdf7438138fad
    container_name: bookstack
    environment:
      - PUID={{ ansible_user_uid }}
      - PGID={{ ansible_user_gid }}
      - TZ=Europe/Paris
      - APP_URL=https://{{ wiki_domain }}
      - DB_HOST=bookstack_db
      - DB_PORT=3306
      - DB_USER=bookstack
      - DB_PASS={{ wiki_db_password }}
      - DB_DATABASE=bookstack
    volumes:
      - ./config:/config
    ports:
      - 127.0.0.1:{{ wiki_local_port }}:80
    restart: unless-stopped
    depends_on:
      - bookstack_db

  bookstack_db:
    image: lscr.io/linuxserver/mariadb@sha256:6f97ff3ef058358c756f085648c11b92001f8600bc16f48d03d672f6699cc7d4
    container_name: bookstack_db
    environment:
      - PUID={{ ansible_user_uid }}
      - PGID={{ ansible_user_gid }}
      - TZ=Europe/Paris
      - MYSQL_ROOT_PASSWORD={{ wiki_db_password }}
      - MYSQL_DATABASE=bookstack
      - MYSQL_USER=bookstack
      - MYSQL_PASSWORD={{ wiki_db_password }}
    volumes:
      - ./db_data:/config
    restart: unless-stopped
